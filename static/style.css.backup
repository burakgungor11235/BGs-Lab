:root {
    --bg-color: #ffffff;
    --text-color: #161616;
    --accent-color: #0f62fe;
    /* IBM Blue 60 */
    --border-color: #e0e0e0;
    --secondary-text: #525252;
    --code-bg: #f4f4f4;
    --grid-gutter: 1.5rem;
    --font-sans: "IBM Plex Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --font-mono: "IBM Plex Mono", "Menlo", "DejaVu Sans Mono", monospace;
    --font-serif: "IBM Plex Serif", Georgia, serif;
    /* Scrollbar Colors */
    --scrollbar-thumb: #8d8d8d;
    --scrollbar-track: transparent;
}

[data-theme="dark"] {
    --bg-color: #161616;
    --text-color: #f4f4f4;
    --accent-color: #4589ff;
    /* IBM Blue 50 */
    --border-color: #393939;
    --secondary-text: #c6c6c6;
    --code-bg: #262626;
    --scrollbar-thumb: #6f6f6f;
}

/* Custom Scrollbars (Carbon Themed) */
::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

::-webkit-scrollbar-track {
    background: var(--scrollbar-track);
}

::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb);
    border-radius: 0;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--secondary-text);
}

html {
    scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
    scrollbar-width: thin;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: var(--font-sans);
    line-height: 1.5;
    color: var(--text-color);
    background-color: var(--bg-color);
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

header {
    border-bottom: 1px solid var(--text-color);
    padding-bottom: 1rem;
    margin-bottom: 3rem;
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
}

hr {
    margin: 2rem 0;

}

.site-title a {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    text-decoration: none;
    color: var(--text-color);
    letter-spacing: -0.01em;
    display: flex;
    align-items: baseline;
    gap: 0.15rem;
}

.logo-bgs {
    font-weight: 300;
    font-style: italic;
}

.logo-blog {
    font-weight: 200;
    margin-left: auto;
    /* Ultralight for 'Blog' */
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 2rem;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
}

.nav-links a:hover {
    border-color: var(--accent-color);
}

main {
    min-height: 70vh;
}

h1,
h2,
h3,
h4 {
    font-family: var(--font-sans);
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.2;
}

h1 {
    font-size: 3.5rem;
    letter-spacing: -0.02em;
}

h2 {
    font-size: 2rem;
    border-top: 1px solid var(--border-color);
    padding-top: 1rem;
    margin-top: 2rem;
}

p {
    margin-bottom: 1.2rem;
    max-width: 65ch;
}

a {
    color: var(--accent-color);
}

/* Grid Layout */
.project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--grid-gutter);
    margin-top: 2rem;
}

.project-card {
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    transition: border-color 0.2s, background-color 0.2s;
    display: flex;
    flex-direction: column;
}

.project-card:hover {
    border-color: var(--text-color);
    background-color: #f4f4f4;
}

.project-card h3 {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.project-card .description {
    color: var(--secondary-text);
    font-size: 0.9rem;
    flex-grow: 1;
}

.project-card .tags {
    margin-top: 1rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--secondary-text);
}

/* Typography styles for content */
.content-text {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    line-height: 1.6;
}

.content-text h2,
.content-text h3 {
    font-family: var(--font-sans);
    border-top: none;
    padding-top: 0;
    margin-top: 2rem;
}

/* Post Layout & TOC */
.post-layout {
    display: grid;
    grid-template-columns: 1fr 300px;
    /* Widened from 250px */
    gap: 4rem;
    align-items: start;
}

.blog-post {
    min-width: 0;
    /* Prevent grid blowout */
}

.post-header {
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 2rem;
    padding-bottom: 1rem;
}

.post-title {
    font-family: var(--font-mono);
    margin-bottom: 0.5rem;
    font-size: 2.5rem;
    /* Adjusted for single post */
}

.metadata {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--secondary-text);
}

.post-toc {
    position: sticky;
    top: 2rem;
    font-family: var(--font-mono);
    border-left: 1px solid var(--border-color);
    padding-left: 0;
    /* Removing padding to align border with items */
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
}

/* Collapsible Submenus */
.toc-list,
.toc-list ul {
    list-style: none;
    padding: 0;
}

.toc-list li {
    margin-bottom: 0;
    font-size: 0.8rem;
    position: relative;
    color: var(--secondary-text);
    /* Ensure base color */
}

/* Base link styling */
.toc-list a {
    text-decoration: none;
    color: var(--secondary-text);
    transition: all 0.2s;
    display: block;
    padding: 0.3rem 0 0.3rem 1.5rem;
    border-left: 2px solid transparent;
    margin-left: -1px;
}

.toc-list a:hover {
    color: var(--accent-color);
    background: linear-gradient(90deg, var(--code-bg) 0%, transparent 100%);
}

/* Active State */
.toc-list a.active {
    color: var(--text-color);
    border-left-color: var(--accent-color);
    font-weight: 600;
    background: linear-gradient(90deg, var(--code-bg) 0%, transparent 100%);
}

/* Logic for hiding/showing submenus */
.toc-list ul {
    display: none;
    /* Hidden by default */
    margin: 0;
}

.toc-list li.expanded>ul {
    display: block;
    /* Show when expanded */
    animation: fadeIn 0.3s ease;
}

/* Nested links styling */
.toc-list ul li a {
    padding-left: 2.5rem;
    /* Indent child items */
    font-size: 0.75rem;
    /* Slightly smaller/thinner */
    font-weight: normal;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-5px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Enhanced Footnotes - Grid Layout */
.footnote-definition {
    display: grid;
    grid-template-columns: 40px 1fr;
    gap: 1rem;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    border-top: 1px solid var(--border-color);
    padding-top: 1rem;
    margin-top: 4rem;
    color: var(--secondary-text);
    align-items: baseline;
}

.footnote-definition sup {
    text-align: right;
    font-weight: 600;
    color: var(--accent-color);
    font-family: var(--font-mono);
}

.footnote-definition p {
    margin-bottom: 0.5rem;
    line-height: 1.5;
}

.footnote-reference a {
    text-decoration: none;
    font-family: var(--font-mono);
    font-weight: bold;
    color: var(--accent-color);
    padding: 0 0.2rem;
    font-size: 0.8em;
    vertical-align: super;
    transition: all 0.2s;
}

.footnote-reference a:hover {
    text-decoration: underline;
}

/* Footnote Popover (IBM Carbon style - Enhanced) */
.footnote-popover {
    position: absolute;
    background: var(--bg-color);
    border: 1px solid var(--text-color);
    /* High contrast border */
    padding: 1rem;
    max-width: 320px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    font-family: var(--font-sans);
    font-size: 0.85rem;
    line-height: 1.5;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s ease-out;
}

[data-theme="dark"] .footnote-popover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    border-color: #6f6f6f;
}

.footnote-popover.visible {
    opacity: 1;
}

.footnote-popover p {
    margin-bottom: 0;
}

.footnote-popover sup {
    display: none;
    /* Hide number in popover */
}

code {
    font-family: var(--font-mono);
    background: var(--code-bg);
    padding: 0.2rem 0.4rem;
    font-size: 0.9em;
}

pre {
    background: var(--code-bg);
    color: var(--text-color);
    padding: 1.5rem;
    overflow-x: auto;
    margin-bottom: 2rem;
    border: 1px solid var(--border-color);
    position: relative;
    border-radius: 0px;
    /* Carbon is sharp */
}

[data-theme="dark"] pre {
    background: #262626;
    /* Carbon Gray 90 */
}

/* IBM Carbon Syntax Highlighting (Class-based) */
pre code .z-keyword {
    color: #be95ff;
    font-weight: 500;
}

/* Purple 40 */
pre code .z-string {
    color: #42be65;
}

/* Green 40 */
pre code .z-comment {
    color: #8d8d8d;
    font-style: italic;
}

/* Gray 50 */
pre code .z-function {
    color: #78a9ff;
}

/* Blue 40 */
pre code .z-variable {
    color: #f4f4f4;
}

/* Gray 10 */
pre code .z-constant {
    color: #ff7eb6;
}

/* Magenta 40 */
pre code .z-number {
    color: #ff7eb6;
}

/* Magenta 40 */
pre code .z-type {
    color: #33b1ff;
}

/* Teal 30 */
pre code .z-operator {
    color: #f4f4f4;
}

pre code .z-heading {
    color: #78a9ff;
    font-weight: bold;
}

pre code .z-punctuation {
    color: #f4f4f4;
    opacity: 0.8;
}

pre code .z-link {
    color: #78a9ff;
    text-decoration: underline;
}

pre code .z-attribute {
    color: #3ddbd9;
}

/* Teal 30 */
pre code .z-builtin {
    color: #3ddbd9;
}

/* Teal 30 */
pre code .z-tag {
    color: #78a9ff;
}

/* Blue 40 */

/* Copy Button */
.copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: transparent;
    border: 1px solid #393939;
    color: #a8a8a8;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    padding: 0.2rem 0.5rem;
    cursor: pointer;
    text-transform: uppercase;
    transition: background 0.2s, color 0.2s;
}

.copy-btn:hover {
    background: #4d4d4d;
    color: #ffffff;
}

/* Breadcrumbs */
.breadcrumb {
    font-family: var(--font-mono);
    text-decoration: none;
    font-size: 0.8rem;
    color: var(--accent-color) !important;
    text-transform: uppercase;
    font-weight: 600;
}

.breadcrumb:hover {
    text-decoration: underline;
}

/* Tech Tags */
.tech-tag {
    font-family: var(--font-mono);
    font-size: 0.70rem;
    background: var(--code-bg);
    color: var(--text-color);
    padding: 0.2rem 0.6rem;
    border: 1px solid var(--border-color);
    text-transform: uppercase;
    display: inline-block;
}

/* Dark Mode Toggle */
.theme-toggle {
    background: none;
    border: 1px solid var(--text-color);
    color: var(--text-color);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
    cursor: pointer;
    text-transform: uppercase;
    transition: all 0.2s;
}

.theme-toggle:hover {
    background: var(--text-color);
    color: var(--bg-color);
}

/* Tasteful Industrial Footer */
.site-footer {
    border-top: 1px solid var(--text-color);
    margin-top: 8rem;
    padding: 3rem 0;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 2rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    line-height: 1.6;
}

.footer-section h4 {
    font-family: var(--font-mono);
    text-transform: uppercase;
    font-size: 0.75rem;
    color: var(--secondary-text);
    margin-bottom: 1rem;
    font-weight: 600;
}

.footer-links {
    list-style: none;
    padding: 0;
}

.footer-links li {
    margin-bottom: 0.25rem;
}

.footer-links a {
    text-decoration: none;
    color: var(--text-color);
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
}

.footer-links a:hover {
    border-color: var(--accent-color);
}

.footer-meta-info {
    color: var(--secondary-text);
    text-transform: uppercase;
}

.footer-geo {
    font-weight: 600;
    color: var(--text-color);
}

/* Responsive */
@media (max-width: 900px) {
    .post-layout {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .post-toc {
        position: static;
        border-left: none;
        border-bottom: 1px solid var(--border-color);
        padding-left: 0;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        max-height: none;
    }
}

@media (max-width: 768px) {
    body {
        padding: 1rem;
    }

    h1 {
        font-size: 2.5rem;
    }
}